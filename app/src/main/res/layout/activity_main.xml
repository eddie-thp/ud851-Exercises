<?xml version="1.0" encoding="utf-8"?>
<!-- COMPLETED (17) Surround the Constraint layout with a ScrollView -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- COMPLETED (2) Replace the Relative layout with a ConstraintLayout -->
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- COMPLETED (3) Create a TextView for the Passenger label and name -->
        <!-- COMPLETED (4) Use tool:text to set the text value -->
        <!-- NOTE: marginStart (newer devices) and marginLeft (older devices) -->
        <TextView
            android:id="@+id/tv_passenger_label"
            android:text="@string/passenger_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_passenger_name"
            tools:text="@string/passenger_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_passenger_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_passenger_label"
        />

        <!-- COMPLETED (5) Create an ImageView for the left rectangle -->
        <!-- COMPLETED (6) Set the background to the shape_rectangle_stroke drawable -->
        <!-- COMPLETED (7) Create an ImageView for the divider -->
        <!-- COMPLETED (8) Create an ImageView for the rightRectangle -->
        <ImageView
            android:id="@+id/iv_left_rectangle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_rectangle_stroke"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_passenger_name" />

        <ImageView
            android:id="@+id/iv_right_rectangle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_rectangle_stroke"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_passenger_name" />

        <ImageView
            android:id="@+id/iv_divider"
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/iv_left_rectangle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_left_rectangle"
            app:layout_constraintStart_toEndOf="@+id/iv_left_rectangle"
            app:layout_constraintEnd_toStartOf="@+id/iv_right_rectangle"
            />

        <!-- COMPLETED (9) Create a TextView for the origin code, the destination code and the flight code -->
        <TextView
            android:id="@+id/tv_origin_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_divider"
            app:layout_constraintEnd_toStartOf="@+id/iv_divider"
            app:layout_constraintStart_toStartOf="@+id/iv_left_rectangle"
            app:layout_constraintTop_toTopOf="@+id/iv_divider"
            tools:text="@string/origin_code" />

        <TextView
            android:id="@+id/tv_flight_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/iv_right_rectangle"
            app:layout_constraintStart_toStartOf="@+id/iv_divider"
            app:layout_constraintTop_toBottomOf="@+id/iv_divider"
            tools:text="@string/flight_code" />

        <TextView
            android:id="@+id/tv_destination_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_divider"
            app:layout_constraintEnd_toEndOf="@+id/iv_right_rectangle"
            app:layout_constraintStart_toStartOf="@+id/iv_right_rectangle"
            app:layout_constraintTop_toTopOf="@+id/iv_divider"
            tools:text="@string/destination_code" />


        <!-- TODO (15) Import the plane image SVG file into the drawable directory and name it art_plane -->
        <!-- TODO (16) Create an ImageView for the plane and set the background to art_plane drawable -->

        <!-- COMPLETED (10) Create a TextView for the time texts and their corresponding labels -->
        <TextView
            android:id="@+id/tv_boarding_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:text="@string/boarding_time_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="@+id/tv_passenger_name"
            app:layout_constraintTop_toBottomOf="@+id/iv_left_rectangle" />

        <TextView
            android:id="@+id/tv_boarding_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tv_boarding_time_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_boarding_time_label"
            tools:text="@string/boarding_time" />

        <TextView
            android:id="@+id/tv_boarding_in_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="32dp"
            android:text="@string/boarding_in_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintEnd_toEndOf="@+id/iv_right_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/iv_right_rectangle" />

        <TextView
            android:id="@+id/tv_boarding_in"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tv_boarding_in_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_boarding_in_label"
            tools:text="@string/boarding_in_time" />

        <TextView
            android:id="@+id/tv_departure_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/departure_time_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="@+id/tv_boarding_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_boarding_time" />

        <TextView
            android:id="@+id/tv_departure_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tv_departure_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_departure_label"
            tools:text="@string/departure_time" />

        <TextView
            android:id="@+id/tv_arrival_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/arrival_time_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="@+id/tv_boarding_in"
            app:layout_constraintTop_toBottomOf="@+id/tv_boarding_in" />

        <TextView
            android:id="@+id/tv_arrival_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tv_arrival_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_arrival_label"
            tools:text="@string/arrival_time" />

        <!-- COMPLETED (11) Create an ImageView for the blue table's header -->
        <ImageView
            android:id="@+id/iv_table_header"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="@+id/iv_right_rectangle"
            app:layout_constraintStart_toStartOf="@+id/tv_departure_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_departure_time" />

        <!-- COMPLETED (12) Create an ImageView for the blue table's body -->
        <ImageView
            android:id="@+id/iv_table_content"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/iv_table_header"
            app:layout_constraintStart_toStartOf="@+id/iv_table_header"
            app:layout_constraintTop_toBottomOf="@+id/iv_table_header" />

        <!-- COMPLETED (13) Create a TextView for each of the labels and text fields in the blue table -->
        <TextView
            android:id="@+id/tv_terminal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/terminal_label"
            app:layout_constraintBottom_toTopOf="@+id/iv_table_content"
            app:layout_constraintStart_toStartOf="@+id/iv_table_header"
            app:layout_constraintTop_toTopOf="@+id/iv_table_header" />

        <TextView
            android:id="@+id/tv_gate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/gate_label"
            app:layout_constraintBottom_toTopOf="@+id/iv_table_content"
            app:layout_constraintEnd_toStartOf="@+id/tv_seat_label"
            app:layout_constraintStart_toEndOf="@+id/tv_terminal_label"
            app:layout_constraintTop_toTopOf="@+id/iv_table_header" />

        <TextView
            android:id="@+id/tv_seat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/seat_label"
            app:layout_constraintBottom_toTopOf="@+id/iv_table_content"
            app:layout_constraintEnd_toEndOf="@+id/iv_table_header"
            app:layout_constraintTop_toTopOf="@+id/iv_table_header" />

        <TextView
            android:id="@+id/tv_terminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_content"
            app:layout_constraintStart_toStartOf="@+id/tv_terminal_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_terminal_label"
            tools:text="@string/terminal" />

        <TextView
            android:id="@+id/tv_gate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_content"
            app:layout_constraintEnd_toStartOf="@+id/tv_seat"
            app:layout_constraintStart_toEndOf="@+id/tv_terminal"
            app:layout_constraintTop_toBottomOf="@+id/tv_gate_label"
            tools:text="@string/gate" />

        <TextView
            android:id="@+id/tv_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_content"
            app:layout_constraintEnd_toEndOf="@+id/iv_table_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_seat_label"
            tools:text="@string/seat" />

        <!-- COMPLETED (14) Create an ImageView for the barcode -->
        <ImageView
            android:id="@+id/barcode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_table_content"
            app:layout_constraintStart_toStartOf="@+id/iv_table_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_table_content"
            app:srcCompat="@mipmap/barcode" />

        <ImageView
            android:id="@+id/tv_art_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_flight_code"
            app:layout_constraintEnd_toStartOf="@+id/iv_right_rectangle"
            app:layout_constraintStart_toStartOf="@+id/iv_divider"
            android:background="@drawable/art_plane"
             />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
